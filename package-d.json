{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prod": "yarn build && yarn start",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "lint": "yarn lint:js && yarn lint:css",
    "lintFix": "yarn lint:jsFix && yarn lint:cssFix",
    "lint:js": "tslint -p . -c tslint.json 'src/pages/**/*.ts*' 'lib/**/*.ts*'",
    "lint:jsFix": "yarn lint:js --fix",
    "lint:css": "stylelint \"**/*.scss\" \"**/*.css\"",
    "lint:cssFix": "yarn lint:css --fix",
  },
  "dependencies": {
    "clsx": "^1.1.0",
    "isomorphic-unfetch": "^3.0.0",
    "next": "9.3.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^9.3.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@types/react": "^16.9.34",
    "cross-env": "^7.0.2",
    "husky": "^4.2.5",
    "jest": "^25.5.3",
    "sass": "^1.26.5",
    "stylelint": "^13.3.3",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-declaration-strict-value": "^1.4.3",
    "stylelint-order": "^4.0.0",
    "tslint": "^6.1.2",
    "tslint-react-hooks": "^2.2.2",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:js && yarn lint:cssFix && yarn test",
      "pre-push": ""
    }
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "git add",
      "jest --findRelatedTests",
      "tslint"
    ],
    "*.+css": "stylelint --cache --fix"
  }
}
