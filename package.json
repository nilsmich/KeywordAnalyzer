{
  "name": "googletrends",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "trends": "ts-node src/index.ts",
    "test": "jest",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lintFix": "yarn lint --fix"
  },
  "dependencies": {
    "@types/node": "^14.0.5",
    "ts-node": "^8.10.1"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "google-trends-api": "^4.9.0",
    "husky": "^4.2.5",
    "ts-jest": "^26.0.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.2",
    "tslint-react-hooks": "^2.2.2",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint  && yarn test",
      "pre-push": ""
    }
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "git add",
      "jest --findRelatedTests",
      "tslint"
    ]
  }
}
